{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "lerna": "^6.1.0"
  },
  "scripts": {
    "build": "lerna run tsc",
    "lint": "lerna run lint",
    "lint-fix": "lerna run lint-fix",
    "prettier-fix": "lerna run prettier-fix",
    "publish": "npm build && lerna publish",
    "force-publish": "lerna run tsc && lerna publish --force-publish --no-git-tag-version --no-push"
  },
  "license": "MIT"
}
