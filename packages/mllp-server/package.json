{
  "name": "mllp-server",
  "version": "0.5.5",
  "description": "MLLP server that reads HL7 messages off of a raw tcp connection",
  "main": "app.js",
  "private": true,
  "scripts": {
    "dev": "ts-node src/app.ts",
    "start": "node dist/app.js",
    "build": "tsc -p tsconfig.build.json",
    "build:cloud": "tsc -p tsconfig.cloud.json",
    "typecheck": "tsc --noEmit",
    "lint": "npx eslint . --ext .ts",
    "lint-fix": "npm run lint --fix",
    "prettier-fix": "npx prettier '**/*.ts' --write --ignore-path ../../.prettierignore",
    "test": "jest --runInBand",
    "clean": "rimraf dist",
    "deepclean": "npm run clean && rimraf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metriport/metriport.git"
  },
  "author": "Metriport",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/metriport/metriport/issues"
  },
  "homepage": "https://github.com/metriport/metriport#readme",
  "dependencies": {
    "@medplum/core": "^3.2.33",
    "@medplum/hl7": "^3.2.33",
    "@metriport/core": "file:packages/core",
    "@metriport/shared": "file:packages/shared",
    "@sentry/cli": "^2.42.1",
    "dotenv": "^16.4.5",
    "ip-cidr": "^3.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@metriport/eslint-rules": "file:packages/eslint-rules",
    "@sentry/node": "^9.1.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/jest": "^29.5.3",
    "@types/node": "^22.13.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
